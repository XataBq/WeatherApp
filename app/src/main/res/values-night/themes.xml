<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.LearningDevelopment" parent="Theme.Material3.Dark.NoActionBar">
        <!--Цветовая палитра-->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorOnPrimary">@color/light_grey</item>
        <item name="android:colorBackground">@color/grey</item>
        <item name="colorOnBackground">@color/red</item>

        <!--Управление виджетами-->
        <item name="colorControlActivated">@color/green</item>
        <item name="colorControlNormal">@color/red</item>
        <item name="colorOnSurface">@color/red</item>
        <item name="checkboxStyle">@style/MyCheckBox</item>

        <!--Шрифты-->
        <item name="android:textColor">@color/light_grey</item>
    </style>

    <style name="MyCheckBox" parent="Widget.Material3.CompoundButton.CheckBox">
        <item name="android:textColor">@color/light_grey</item>
    </style>
</resources>